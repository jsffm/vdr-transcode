    "vdr"|"")
	input_vdr
	;;
    "dvd")
	input_dvd $track
	;;
    "BD")
	#set -x
	input_BD $track
	#exit
	;;
    "none")
	none=
	;;
    *)
	if [ "${INPUT:0:4}" == "dvd:" ]
	then
	    tr=${INPUT:4}
	    input_dvd $tr
	else
	    input_file
	fi
	;;
esac
