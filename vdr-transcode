#set -x
case $TODO in
    "-h")
	help $2
	;;
    "--streams")
	streams
	;;
    "--inf")
	inf
	exit
	;;
    "--stat")
	dialog=0
	noff=1
	[ -e $vtlog ] && status $(<"$vtlog")
	exit
	;;
    "--astat")
	astat
	exit
	;;
    "--as")
	server
	;;
    "--asd")
	server -d
	;;
